<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".NowPlaying">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Card_NowPlaying"
        android:background="@color/black"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_song_img"
            android:id="@+id/bottom_Album_Art"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_skip_next_bottom"
            android:src="@drawable/ic_skip_next"
            android:layout_alignParentEnd="true"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:backgroundTint="@color/white"
            android:layout_toStartOf="@id/btn_skip_next_bottom"
            android:layout_marginEnd="10dp"
            android:id="@+id/btn_playPause_bottom"
            app:fabSize="mini"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_skip_previous_bottom"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/btn_playPause_bottom"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:id="@+id/song_name_nowPlaying"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/bottom_Album_Art"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_toStartOf="@id/btn_skip_previous_bottom"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist Name is here"
            android:id="@+id/song_artist_nowPlaying"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/bottom_Album_Art"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_toStartOf="@id/btn_skip_previous_bottom"
            android:layout_below="@id/song_name_nowPlaying"
            />
    </RelativeLayout>

</FrameLayout>