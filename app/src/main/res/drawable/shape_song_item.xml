<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <solid android:color="#353232">

            </solid>
            <padding
                android:left="10dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />

        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="#353232">

            </solid>
            <padding
                android:left="10dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />

        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/black">

            </solid>
            <padding
                android:left="10dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
            <stroke android:color="#270D0D"
                android:width="1dp"
                >

            </stroke>
        </shape>
    </item>
</selector>